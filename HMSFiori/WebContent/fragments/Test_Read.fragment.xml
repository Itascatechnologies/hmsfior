<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">
  	<l:Grid
    defaultSpan="L12 M12 S12"
    width="auto">
    <l:content>
      <f:SimpleForm 
        minWidth="1024"
        maxContainerCols="2"
        editable="true"
        layout="ResponsiveGridLayout"
        title="Selected Test Information"
        labelSpanL="3"
        labelSpanM="3"
        emptySpanL="4"
        emptySpanM="4"
        columnsL="1"
        columnsM="1"
        class="editableForm">
         <Label text="Name" />
         <Text text="{Name}" />
          <Label text="Department Name" />
          <Text text="{NameDepartment}" />
          <Label text="Description" />
          <Text text="{Description}" />
           <Label text="Created By" />
          <Text text="{CreatedBy}" />
           <Label text="Created On" />
          <Text text="{CreatedOn}" />
      </f:SimpleForm>
    </l:content>
  </l:Grid>
</core:FragmentDefinition>